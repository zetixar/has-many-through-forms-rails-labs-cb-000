<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :content %>
  <%= f.text_field :content %><br>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>

  Add your own category: <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
     <%= categories_fields.text_field :name %><br>
   <% end %>
   Got more category? <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
      <%= categories_fields.text_field :name %><br>
    <% end %>
  <%= f.submit %>
<% end %>
